<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:text="â–¼ Click the photo icon and upload picture!"
        android:textStyle="bold|italic"
        android:textColor="#0022FF"
        android:gravity="center"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
<ImageView
    android:id="@+id/upload_image"
    android:src="@drawable/ic_baseline_photo_library_24"
    android:background="#EDEDED"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center"
    />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Today My Diet"
            android:textColor="#0022FF"
            android:gravity="center"
            android:textStyle="bold|italic"
            />


        <EditText
android:id="@+id/dateAndTime"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginLeft="70dp"
    android:layout_marginRight="70dp"
    android:textSize="15sp"

            android:fontFamily="@font/third_font"
            android:textColor="#000000"
            android:textColorHint="#000000"
    android:hint="Please Write The Date And Time"

    android:gravity="center"
    android:textStyle="bold"
    android:background="@drawable/start_button"
/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


        <EditText
            android:id="@+id/content"
        android:hint="Please Write The Your Daily Diet"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fontFamily="@font/third_font"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:background="@drawable/start_button"
        />
    <TextView
        android:id="@+id/save"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="10dp"
        android:text="SAVE"
        android:fontFamily="@font/third_font"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/start_button"
        />
    </LinearLayout>
</LinearLayout>
